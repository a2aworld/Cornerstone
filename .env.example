# A2A-World Environment Configuration
# Copy this file to .env and configure for your environment

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql://a2a:a2a_dev_password@postgres:5432/a2a_world
POSTGRES_USER=a2a
POSTGRES_PASSWORD=a2a_dev_password
POSTGRES_DB=a2a_world

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://redis:6379
REDIS_TTL=3600

# ============================================================================
# Application Configuration
# ============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
A2A_SERVER_URL=http://a2a-server:8000
VISUAL_CORTEX_URL=http://visual-cortex-api:8001

# ============================================================================
# Authentication & Security
# ============================================================================
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================================================
# Visual Cortex - Satellite Imagery APIs
# ============================================================================
# USGS Earth Explorer (Landsat)
USGS_USERNAME=your_usgs_username
USGS_PASSWORD=your_usgs_password

# Copernicus (Sentinel-2)
COPERNICUS_USERNAME=your_copernicus_username
COPERNICUS_PASSWORD=your_copernicus_password

# AWS S3 (for storing cached imagery)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=a2a-visual-data

# ============================================================================
# IPFS Configuration (for artifact storage)
# ============================================================================
IPFS_NODE_URL=http://localhost:5001
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/
PINATA_API_KEY=your_pinata_key
PINATA_SECRET_KEY=your_pinata_secret

# ============================================================================
# Monitoring & Observability
# ============================================================================
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=false

# ============================================================================
# Social Commerce as a Service (SCaaS)â„¢
# ============================================================================
SCAAS_ENABLED=false  # Enable in Phase 3
SCAAS_TRANSACTION_FEE=0.05  # 5% marketplace fee

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_GPU_SANDBOX=false  # Enable in Sprint 6
ENABLE_PUZZLE_GENERATION=false  # Enable in Sprint 7
ENABLE_BETA_MODE=false  # Enable in Sprint 8

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_IMAGERY_REQUESTS_PER_DAY=100

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=*  # Restrict in production
CORS_ALLOW_CREDENTIALS=true
